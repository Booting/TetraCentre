<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0d1137">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#141a54"
        android:elevation="4dp"
        android:theme="@style/ToolBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="50dp">
        // INFORMATION
        <RelativeLayout android:id="@+id/relInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/lblInformation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_shape_border"
                android:textSize="26sp"
                android:textColor="@android:color/black"
                android:text="Information"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:paddingLeft="90dp"
                android:layout_marginLeft="10dp"/>
            <ImageView android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_information"/>
        </RelativeLayout>

        // EDUSHARE
        <RelativeLayout android:id="@+id/relEduShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView android:id="@+id/lblEduShare"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_shape_border"
                android:textSize="26sp"
                android:textColor="@android:color/black"
                android:text="EduShare"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:paddingLeft="90dp"
                android:layout_marginLeft="10dp"/>
            <ImageView android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_share"/>
        </RelativeLayout>

        // EDUSHOP
        <RelativeLayout android:id="@+id/relEduShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView android:id="@+id/lblEduShop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_shape_border"
                android:textSize="26sp"
                android:textColor="@android:color/black"
                android:text="EduShop"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:paddingLeft="90dp"
                android:layout_marginLeft="10dp"/>
            <ImageView android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_shop"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0d1137">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#141a54"
        android:elevation="4dp"
        android:theme="@style/ToolBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">
            <EditText android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_shape_border"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:hint="Title of Video"
                android:padding="8dp"
                android:layout_marginTop="16dp"/>
            <EditText android:id="@+id/txtUrl"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/custom_shape_border"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:hint="Url of Video"
                android:padding="8dp"
                android:gravity="left|top"
                android:layout_marginTop="16dp"/>
            <Button android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="Send"
                android:layout_marginTop="16sp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

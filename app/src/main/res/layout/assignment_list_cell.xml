<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relAssignmentCell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <TextView android:id="@+id/lblClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp"/>

        <LinearLayout android:id="@+id/linAction"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:gravity="right">
            <Button android:id="@+id/btnDownload"
                style="@style/btnStyleSignIn"
                android:text="Download"
                android:clickable="true"
                android:visibility="gone"/>
            <Button android:id="@+id/btnUpload"
                style="@style/btnStyleSignIn"
                android:text="Upload"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:visibility="gone"/>
            <LinearLayout android:id="@+id/linScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center|center_vertical"
                android:layout_gravity="center|center_vertical"
                android:visibility="gone">
                <TextView android:id="@+id/lblScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@android:color/black"
                    android:text="Score"
                    android:layout_gravity="center"/>
                <TextView android:id="@+id/txtScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:text="100"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="#0d1137">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#141a54"
        android:elevation="4dp"
        android:theme="@style/ToolBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <android.support.v7.widget.CardView
        android:layout_below="@+id/toolbar"
        android:id="@+id/cardHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        android:layout_margin="24dp"
        android:padding="8dp">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cover"
                android:scaleType="centerCrop"/>
            <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/imgProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/cardHeader"
        android:id="@+id/cardBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp">
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp">
            // Name
            <TextView android:id="@+id/lblName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="Name"/>
            <View android:background="#80000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:text="-"/>

            // Date of Birth
            <TextView android:id="@+id/lblDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="Date Of Birth"
                android:layout_marginTop="12dp"/>
            <View android:background="#80000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView android:id="@+id/txtDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:text="-"/>

            // School
            <TextView android:id="@+id/lblSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="School"
                android:layout_marginTop="12dp"/>
            <View android:background="#80000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView android:id="@+id/txtSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:text="-"/>

            // Number of Phone
            <TextView android:id="@+id/lblNumberOfPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="Number Of Phone"
                android:layout_marginTop="12dp"/>
            <View android:background="#80000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView android:id="@+id/txtNumberOfPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:text="-"/>

            // Email
            <TextView android:id="@+id/lblEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="Email"
                android:layout_marginTop="12dp"/>
            <View android:background="#80000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:text="-"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>

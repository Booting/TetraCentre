<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relAssignmentStudentCell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <TextView android:id="@+id/lblName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_weight="1.3"
            android:text="Name"
            android:layout_marginRight="10dp"/>
        <TextView android:id="@+id/lblScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_weight="0.6"
            android:text="Score"
            android:gravity="center"
            android:layout_marginRight="10dp"/>
        <LinearLayout android:id="@+id/linAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.1">
            <Button android:id="@+id/btnDownload"
                style="@style/btnStyleWhite"
                android:text="Download"
                android:clickable="true"/>
            <Button android:id="@+id/btnScore"
                style="@style/btnStyleWhite"
                android:text="Score"
                android:clickable="true"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50FFFFFF"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>